mixin header(active, mods)

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' page-header_' + modsList[i].trim();
      }
    }

  header.page-header(class=allMods)
    .page-header__overlay
      .wrapper.wrapper_flex
        .page-header__hamburger
          +hamburger
        +mmenu
        +logo
        .page-header__nav
          +main-nav(active)
        .page-header__search
          +header-search