//- Все примеси в этом файле должны начинаться c имени блока (caption)

mixin caption(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +caption('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' caption_' + modsList[i].trim();
      }
    }

  h4.caption(class=allMods)&attributes(attributes)= text
    