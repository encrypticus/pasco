mixin flickr-widget(mods)
  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' flickr-widget_' + modsList[i].trim();
      }
    }

  include images.data.pug

  .flickr-widget(class=allMods)&attributes(attributes)
    each image in images
      img.flickr-widget__img(src= image.src, alt= image.alt)