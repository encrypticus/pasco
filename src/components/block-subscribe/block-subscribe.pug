mixin block-subscribe(mods)
  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' block-subscribe_' + modsList[i].trim();
      }
    }

  section.block-subscribe(class=allMods)&attributes(attributes)
    block
    